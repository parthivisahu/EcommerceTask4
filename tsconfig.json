{
    "compilerOptions": {
      "target": "es6",
      "lib": ["es2015", "dom"],       /* Set the target ECMAScript version */
      "module": "commonjs",      /* Use CommonJS for module resolution */
      "strict": true,            /* Enable strict type checking */
      "esModuleInterop": true,   /* Allow default imports from non-ES6 modules */
      "forceConsistentCasingInFileNames": true, /* Enforce consistent file naming */
      "outDir": "./script",        /* Specify the output directory for compiled files */
      "rootDir": "./script"         /* Specify the source directory */
    },
    "include": [
      "./script*.ts"           /* Include your TypeScript source files */
    ]
  }
  